<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecordFragment">


    <TextView
        android:id="@+id/record_filename2"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center_horizontal"
        android:text="Welcome to the record page!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/record_filename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_header_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/record_header_image"
        android:layout_width="365dp"
        android:layout_height="225dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8headphones64">

    </ImageView>

    <TextView
        android:id="@+id/record_filename"
        android:layout_width="213dp"
        android:layout_height="63dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center_horizontal"
        android:text="Press the mic button \n to start recording"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_header_image" />

    <Chronometer
        android:id="@+id/record_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:textColor="@color/colorPrimary"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_filename">

    </Chronometer>

    <ImageButton
        android:id="@+id/record_btn"
        android:layout_width="106dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryLight"
        android:src="@drawable/icons8microphone64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_filename">

    </ImageButton>

    <ImageButton
        android:id="@+id/record_list_btn"
        android:layout_width="134dp"
        android:layout_height="114dp"
        android:background="@color/colorPrimaryLight"
        android:padding="16dp"
        android:src="@drawable/icons8list64"
        app:layout_constraintBottom_toBottomOf="@+id/record_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/record_btn"
        app:layout_constraintTop_toTopOf="@+id/record_btn"
        app:layout_constraintVertical_bias="0.0">

    </ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>